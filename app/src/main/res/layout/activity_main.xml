<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="START"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="110dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="147dp" android:layout_marginStart="147dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="149dp"
            android:layout_marginRight="149dp"/>
    <Button
            android:text="STOP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b2" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/b1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="147dp" android:layout_marginStart="147dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="152dp"
            android:layout_marginRight="152dp"/>
</android.support.constraint.ConstraintLayout>